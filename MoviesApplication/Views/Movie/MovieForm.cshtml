@model MoviesApplication.ViewModels.NewMovieViewModel

@{
    ViewBag.Title = "MovieForm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New/Edit Movie</h2>

@using (Html.BeginForm("Add", "Movie"))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Movie.Title)
        @Html.TextBoxFor(x => x.Movie.Title, new {@class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Movie.ReleasedDate)
        @Html.TextBoxFor(x => x.Movie.ReleasedDate, new {@class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Movie.Genre)
        @Html.DropDownListFor(x => x.Movie.GenreId, new SelectList(Model.Genres, "Id", "Name"), "Select genre", new { @class = "form-control"})
    </div>
    <button type="submit" class="btn btn-primary">
        Save
    </button>
}

